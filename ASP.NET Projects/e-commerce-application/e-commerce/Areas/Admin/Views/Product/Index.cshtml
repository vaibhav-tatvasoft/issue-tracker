@model List<Product>
<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2>Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-action="Upsert" asp-controller="Product" class="btn btn-primary">Add new product</a>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Title</td>
                        <td>@obj.ISBN</td>
                        <td>@obj.Author</td>
                        <td>@obj.Price</td>
                        <td>@obj.category</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2 d-flex align-items-center text-center">
                                    <i class="bi bi-pencil-square me-2"></i> Edit
                                </a>
                                <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 d-flex align-items-center">
                                    <i class="bi bi-trash3 me-2"></i> Delete
                                </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>